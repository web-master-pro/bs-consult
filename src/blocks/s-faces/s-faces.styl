.s-faces
    &__first
        // min-height 895px
        background #06090b url(img/s-faces-1-bg.jpg) no-repeat center top
        padding 53px 0 60px
        +below(1000px)
            background-size cover
    &__second
        // min-height 950px
        background #06090b url(img/s-faces-2-bg.jpg) no-repeat center top
        padding 115px 0 15px
        +below(1000px)
            background-size cover
    &__in
        container(1040px)
        padding 0px 20px
        display flex
        flex-flow row nowrap
        justify-content space-between
        +below(640px)
            flex-wrap wrap
            justify-content center

    &__left
        flex 0 1 61%
        +below(640px)
            order 2
            flex 1 1 100%
    &__right
        flex 0 1 38%
        ^[0]__first &
            padding-top 130px
            +below(640px)
                padding 0 0 30px
                flex 1 1 100%
        ^[0]__second &
            padding-top 60px
            +below(640px)
                padding 0 0 30px
                flex 1 1 100%

    &__title
        color white
        font(Bold)
        font-size 40px
        line-height 1
        text-align center
        margin 0 0 92px
        flex 1 100%

    &__name
        color white
        font(Thin)
        font-size 40px
        text-transform uppercase
        line-height 1
        margin 0 0 30px
        strong
            font(Bold)
        +below(640px)
            text-align center

    &__position
        color #4cc82c
        font(Bold)
        font-size 20px
        line-height 1
        padding-top 17px
        margin 0 0 55px
        position relative
        &::before
            content ""
            display block
            width 60px
            height 3px
            background-color #4cc82c
            position absolute
            top 0
            left 0
            margin 0
        +below(640px)
            text-align center
            &::before
                left 50%
                margin-left -30px

    &__text
        max-width 610px
        color white
        font(Thin)
        font-size 20px
        line-height 30px
        margin 0 0 30px
        strong
            font(Bold)

    &__call
        max-width 440px
        color #00a9d9
        font(Bold)
        font-size 20px
        line-height 31px
        margin 50px 0 35px
        +below(640px)
            text-align center
            margin-left auto
            margin-right auto

    &__button
        button()
        +below(640px)
            margin-left auto
            margin-right auto

    &__photo
        display block
        width 100%
        height auto
        margin 0 auto
        ^[0]__first &
            max-width 424px
        ^[0]__second &
            max-width 331px


    &__photo-name
        color white
        font(Bold)
        font-size 22px
        line-height 1
        text-align center
        margin 0 0 10px
        // margin-right -40px
        +below(1100px)
            margin-right 0
        +below(640px)
            display none

    &__photo-position
        color #4cc82c
        font(Thin)
        font-size 18px
        line-height 1
        text-align center
        margin 0
        // margin-right -40px
        +below(1100px)
            margin-right 0
        +below(640px)
            display none

    &__fotki
        display block
        width 100%
        font-size 0
        text-align center
        padding 0
        margin 60px 0 0

    &__fotka
        display inline-block
        vertical-align top
        margin 0
