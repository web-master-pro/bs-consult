.s-hr
    background #fff url(img/s-hr-bg.jpg) no-repeat center top

    &__in
        container(1260px)
        padding 75px 20px 40px
        min-height 1115px
        +below(768px)
            padding-top 50px
            padding-bottom: 0;

    &__title
        color #003874
        font(Extra)
        font-size 37px
        line-height 1
        font-weight 900
        letter-spacing: -0.055em
        text-align center
        margin 0 0 55px -20px
        +below(1280px)
            margin-left 0
        +below(768px)
            font-size 30px

    &__box
        display block
        width 100%
        max-width 1200px
        background-color #fff
        margin 0 0 30px
        padding 70px 85px 70px 100px
        position relative
        +below(1280px)
            margin-left auto
            margin-right auto
        +below(1000px)
            padding 70px 40px 40px
        +below(480px)
            width auto
            padding 70px 20px 40px

    &__main
        display flex
        justify-content space-between
        max-width: 1015px
        +below(750px)
            flex-wrap wrap
            justify-content: center;

    &__left
        margin-right 30px
        margin-bottom 40px
        +below(750px)
            order 2
            margin-right 0
            margin-bottom: 50px
    &__right
        display block
        width 200px
        min-width 200px
        flex-shrink 0
        padding-top 32px
        margin-bottom 50px
        +below(750px)
            padding-top 0

    &__headline
        color #00060c
        font(Bold)
        font-size 26px
        line-height 30px
        margin 0 0 20px
        +below(480px)
            font-size 22px

    &__definition
        max-width 710px
        color #00060c
        font()
        font-size 20px
        line-height 1.5
        margin 0 0 55px
        strong
            font(Bold)

        em
            color #004c9d
            font()
            font-style normal
        +below(480px)
            font-size 18px

    &__info
        display block
        background-color #f5f5f6
        border-left 15px solid #003874
        padding 15px 20px 15px 40px
        color #00060c
        font(Thin)
        font-size 20px
        line-height 1.5
        margin 0
        strong
            color #003874
            font(Bold)
        +below(480px)
            padding 15px 20px
            font-size 18px
            border-left-width: 10px
    &__icon
        retinaSprite($icon_hr_big_square_group)
        margin-bottom: 25px

    &__link
        display block
        color #00a9d9
        font(Bold)
        font-size 20px
        line-height 30px
        text-decoration underline
        text-align center
        transition all 0.3s ease
        &:hover
            color @color
            text-decoration none

    &__problems-title
        color #004c9d
        font(Bold)
        font-size 26px
        font-weight 700
        line-height 30px
        margin 0 0 15px
        +below(480px)
            font-size 22px
            line-height 1.2

    &__problems
        cf()
        margin-bottom 35px

    &__list
        display block
        padding 0 40px 0 55px
        margin 0 0 40px 0
        col(650/1000, gutter: 4)
        position relative
        &::after
            display block
            content "}"
            color #004c9d
            font()
            font-size 152px
            line-height 1
            position absolute
            top -20px
            right 0
        +below(800px)
            span(1)
            margin 0 0 20px 0
            padding-right 0
            &::after
                display none
        +below(480px)
            padding 0 0 0 20px

    &__list-item
        // display block
        color #00060c
        font()
        font-size 18px
        line-height 26px
        padding 0 0 0 15px
        margin 2px 0
        +below(480px)
            padding-left 0

    &__problems-txt
        display block
        color #00060c
        font(Thin)
        font-size 16px
        line-height 25px
        span(320/1000)
        margin 0 0 40px
        strong
            font(Bold)
        +below(800px)
            span(1)
            margin 0 0 20px 0

    &__spec-title
        max-width 800px
        color #003874
        font(Bold)
        font-size 30px
        line-height 1.2
        text-align center
        margin 0 auto 45px
        +below(480px)
            font-size 22px

    &__options-title
        color #003874
        font(Bold)
        font-size 26px
        line-height 1
        margin 0 0 45px
        +below(480px)
            font-size 22px

    &__options
        list-style: none;
        font-size 0
        text-align center
        padding 0
        margin 0 0 60px

    &__option
        display inline-block
        width 250px
        vertical-align top
        color #00060c
        font(Bold)
        font-size 20px
        line-height 30px
        text-align left
        padding 85px 0 0 0
        margin 0 0 35px
        position relative
        &::after
            content ""
            display block
            width 1px
            height 150px
            background-color: #ccdbeb
            position absolute
            left 0
            top 50px
        &:first-child
            &::after
                display none
        &:nth-child(1)
            padding-left 0px
            padding-right 10px
            &::before
                content ""
                retinaSprite($icon_option_man_group)
                position absolute
                top 0
                left 72px

        &:nth-child(2)
            padding-left 23px
            padding-right 10px
            &::before
                content ""
                retinaSprite($icon_option_info_group)
                position absolute
                top 0
                left 98px

        &:nth-child(3)
            padding-left 40px
            padding-right 20px
            &::before
                content ""
                retinaSprite($icon_option_exit_group)
                position absolute
                top 0
                left 100px

        &:nth-child(4)
            padding-left 40px
            padding-right 0px
            &::before
                content ""
                retinaSprite($icon_option_thumb_up_group)
                position absolute
                top 0
                left 105px

        &:nth-child(5)
            padding-left 60px
            padding-right 20px
            &::before
                content ""
                retinaSprite($icon_option_meter_group)
                position absolute
                top 0
                left 95px

        &:nth-child(6)
            padding-left 40px
            padding-right 40px
            &::before
                content ""
                retinaSprite($icon_option_grow_group)
                position absolute
                top 0
                left 95px

        +below(740px)
            padding 85px 10px 0 !important
            &::after
                display none
            &::before
                left 60px  !important
        +below(480px)
            font-size 18px
            padding 80px 0 0 !important

    &__call
        color #00060c
        font(Bold)
        font-size 28px
        line-height 39px
        text-align center
        margin 0 auto 30px
        +below(480px)
            font-size 24px
            line-height 1.3

    &__button
        button()
        margin 0 auto
