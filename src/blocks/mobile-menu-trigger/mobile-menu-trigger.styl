.mobile-menu-trigger
    display block
    width 50px
    height 50px
    background-color #004c9d
    cursor pointer
    transition opacity 0.3s ease, left 1.5s ease
    &--green

    &.on
        +below(1000px)
            left 20px
            opacity 0.6
    &:hover
        opacity 1 !important


    &__in
        display block
        width 30px
        height 6px
        background-color: #fff
        position absolute
        top 10px
        left 10px
        &::before
        &::after
            display block
            width 30px
            height 6px
            background #fff

        &::before
            content ""
            position absolute
            top 12px
            left 0
        &::after
            content ""
            position absolute
            top 24px
            left 0
