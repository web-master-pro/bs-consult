    &__txt
        color white
        font(Thin)
        font-size 16px
        line-height 1.2
        margin 0 0 15px

    &__button
        display block
        width 190px
        height auto
        background-color white
        border none
        outline none
        color #00a9d9
        font(Bold)
        font-size 18px
        line-height 1
        padding 15px 0 12px
        text-decoration underline
        text-align center
        position absolute
        right 20px
        bottom 20px
        &:hover
            text-decoration none
