.s-nav
    +below(425px)
        display none
    &__in
        container(1000px)
        padding 90px 20px
        min-height 860px
        position relative

    &__title
        color #003874
        font(Thin)
        font-size 40px
        line-height 1
        text-align center
        margin 0 0 60px

    &__nav-1
        position absolute
        top 190px
        left 450px
        +below(1000px)
            position relative
            top auto
            left auto
            margin 0 auto 40px
    &__nav-2
        position absolute
        top 190px
        left 20px
        +below(1000px)
            position relative
            top auto
            left auto
            margin 0 auto

.nav-1
    display block
    width 540px
    min-height 510px
    +below(640px)
        width 380px

    &__title
        background-color #003874
        color white
        font(Bold)
        font-size 28px
        line-height 1
        text-align center
        text-transform uppercase
        padding 12px 10px 10px
        margin 0 0 40px

    &__items
        width 360px
        height 410px
        position absolute
        top 100px
        left 100px
        +below(640px)
            width 360px
            height 410px
            position relative
            top auto
            left auto
            margin 0 auto

    &__item-more
        position absolute
        top 0
        left 0
        width 360px
        height 410px
        z-index 100
        cursor pointer
        display none
        +below(640px)
            width 180px
            height 205px
            &--1
                top 0
                left 0
            &--2
                top 0
                left 180px
            &--3
                top 205px
                left 0
            &--4
                top 205px
                left 180px
            // &--5
            //     top 410px
            //     left 90px

    &__item
