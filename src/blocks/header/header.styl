.header
    width 100%
    position relative

    &__container
        overflow hidden
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        min-height 870px

    &__video
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        +below(650px)
            display none

    &__video-cover
        position absolute
        width 100%
        height 100%
        background #000 url(img/header-bg.jpg) no-repeat
        background-size cover
        background-position center
        +below(650px)
            display block !important

    &__video-overlay
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        background rgba(0,0,0,0.5)

    &__content
        display block
        width 100%
        z-index 2
        position relative
        overflow hidden

    &__in
        container(1214px)
        padding 75px 20px 40px
        +below(640px)
            padding 40px 20px 20px

    &__top
        display flex
        flex-flow row no-wrap
        justify-content space-between
        margin 0 0 145px
        +below(650px)
            flex-wrap wrap
            justify-content space-around
            margin-bottom 20px

    &__logo
    &__contacts
        flex 0 0 auto

    &__logo
    &__contacts
        +below(650px)
            flex 1 1 100%
            text-align center
            margin-bottom 30px

    &__title
        max-width 800px
        color white
        font(Extra)
        font-size 52px
        line-height 1.25
        text-transform uppercase
        text-align center
        font-weight 800
        letter-spacing 0.011em
        margin 0 auto 70px
        +below(900px)
            font-size 40px
        +below(768px)
            font-size: 30px
        +below(650px)
            margin-bottom 30px

    &__text
        max-width 550px
        color white
        font()
        font-size 27px
        line-height 1.5
        text-align center
        margin 0 auto 165px
        +below(640px)
            font-size 24px
            line-height 1.2
            text-align center
            margin-bottom 50px


