.main-form
    display block
    max-width: 386px;
    min-height: 473px;
    background-color: rgba(225,244,254,0.85);
    box-shadow: 0 0 16px rgba(0, 0, 0, 0.12);
    padding 41px 15px
    &__title
        color: #003874;
        font(Bold)
        font-size: 25px;
        line-height: 1.3
        text-align: center;
        margin 0 0 40px

    &__input
        input()
        display block
        margin: 0 auto 15px

    &__button
        button()
        height 50px
        margin 20px auto 28px

    &__text
        max-width 278px
        color #003874
        font(Thin)
        font-size 18px
        line-height 1.2
        text-align center
        margin 0 auto 38px
        strong
            font(Bold)
    &__privacy
        max-width 278px
        color #58585a
        font(Thin)
        font-size 14px
        line-height 1
        padding-left 30px
        text-align left
        position relative
        margin 0 auto
        +below(800px)
            max-width 170px
        &::before
            content ""
            retinaSprite($icon_lock_group)
            position absolute
            left 0
