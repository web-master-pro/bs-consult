.s-accounting
    background #fff url(img/s-accounting-bg.jpg) no-repeat center top

    &__in
        container(1260px)
        padding 55px 20px 40px
        min-height 1115px
        +below(768px)
            padding-top 40px
            padding-bottom 0
        +below(480px)
            padding-top 40px

    &__title
        color #156500
        font(Extra)
        font-size 37px
        line-height 1
        font-weight 900
        letter-spacing: -0.055em
        text-align center
        margin 0 0 50px -20px
        +below(1280px)
            margin-left 0
        +below(768px)
            font-size 30px
        +below(480px)
            margin-bottom 40px

    &__box
        display block
        width 100%
        max-width 1200px
        background-color #fff
        margin 0 0 30px
        padding 70px 85px 70px 100px
        position relative
        +below(1280px)
            margin-left auto
            margin-right auto
        +below(1000px)
            padding 70px 40px 40px
        +below(480px)
            width auto
            padding 70px 20px 40px

    &__main
        display flex
        justify-content space-between
        max-width 1015px
        +below(750px)
            flex-wrap wrap
            justify-content: center;

    &__left
        margin-right 30px
        margin-bottom 65px
        +below(750px)
            order 2
            margin-right 0
            margin-bottom: 50px
    &__right
        display block
        width 200px
        min-width 200px
        flex-shrink 0
        padding-top 32px
        margin-bottom 50px
        +below(750px)
            padding-top 0

    &__headline
        color #00060c
        font(Bold)
        font-size 26px
        line-height 30px
        margin 0 0 15px
        +below(480px)
            font-size 22px
            line-height 1.2

    &__definition
        max-width 710px
        color #00060c
        font()
        font-size 20px
        line-height 1.5
        margin 0 0 40px
        strong
            font(Bold)
            font-size 22px
        em
            color #156500
            font-style: normal;
        +below(480px)
            font-size 18px

    &__list-title
        color #156500
        font(Bold)
        font-size 22px
        line-height 30px
        margin 0 0 10px 34px
        +below(480px)
            margin-left 0

    &__list
        max-width 670px
        display block
        padding 0 0 0 55px
        margin 0 0 40px 0
        +below(480px)
            padding 0 0 0 20px

    &__list-item
        color #00060c
        font()
        font-size 18px
        line-height 1.5
        padding 0 0 0 15px
        margin 2px 0
        +below(480px)
            padding-left 0
            font-size 18px
            line-height 30px

    &__icon
        retinaSprite($icon_accounting_big_square_group)
        margin-bottom: 25px

    &__link
        display block
        color #4cc82c
        font(Bold)
        font-size 20px
        line-height 30px
        text-decoration underline
        text-align center
        transition all 0.3s ease
        &:hover
            color @color
            text-decoration none

    &__offer-title
        color #156500
        font(Bold)
        font-size 32px
        line-height 1
        text-align center
        margin 0 0 10px
        +below(480px)
            font-size 26px

    &__offer-txt
        max-width: 660px;
        color #00060c
        font()
        font-size 26px
        line-height 1.3
        text-align center
        margin 0 auto 115px
        +below(480px)
            font-size 20px
            line-height 1.2
            margin-bottom 40px

    &__options-title
        max-width: 740px;
        color #156500
        font(Bold)
        font-size 25px
        line-height 34px
        text-align center
        margin 0 auto 70px
        +below(480px)
            font-size 22px
            line-height 1.2
            margin-bottom 40px

    &__options
        list-style: none;
        font-size 0
        text-align center
        padding 0
        margin 0 0 80px
        +below(480px)
            margin-bottom 20px

    &__option
        display inline-block
        width 250px
        vertical-align top
        color #00060c
        font(Bold)
        font-size 20px
        line-height 30px
        text-align left
        padding 85px 0 0 0
        margin 0 0 20px
        position relative
        &::after
            content ""
            display block
            width 1px
            height 150px
            background-color: #ccdbeb
            position absolute
            right 0
            top 50px
        &:last-child
            &::after
                display none
        &:nth-child(1)
            padding-left 5px
            padding-right 20px
            &::before
                content ""
                retinaSprite($icon_option_moneybag_group)
                position absolute
                top 0
                left 74px

        &:nth-child(2)
            padding-left 40px
            padding-right 10px
            &::before
                content ""
                retinaSprite($icon_option_focus_group)
                position absolute
                top 0
                left 100px

        &:nth-child(3)
            padding-left 70px
            padding-right 40px
            &::before
                content ""
                retinaSprite($icon_option_expand_group)
                position absolute
                top 0
                left 100px

        &:nth-child(4)
            padding-left 70px
            padding-right 0px
            &::before
                content ""
                retinaSprite($icon_option_arrow_down_group)
                position absolute
                top 0
                left 135px

        +below(740px)
            padding 85px 10px 0 !important
            &::after
                display none
            &::before
                left 60px  !important
        +below(480px)
            font-size 18px
            padding 80px 0 0 !important


    &__call
        color #00060c
        font(Bold)
        font-size 28px
        line-height 39px
        text-align center
        margin 0 auto 30px
        +below(480px)
            font-size 24px
            line-height 1.3

    &__button
        button(green)
        margin 0 auto
