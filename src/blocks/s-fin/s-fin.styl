.s-fin
    background #fff url(img/s-fin-bg.jpg) no-repeat center top

    &__in
        container(1260px)
        padding 75px 20px 40px
        min-height 1115px
        +below(768px)
            padding-top 50px
            padding-bottom 0

    &__title
        color #156500
        font(Extra)
        font-size 37px
        line-height 1
        font-weight 900
        letter-spacing: -0.055em
        text-align center
        margin 0 0 55px -20px
        +below(1280px)
            margin-left 0
        +below(768px)
            font-size 30px

    &__box
        display block
        width 100%
        max-width 1200px
        background-color #fff
        margin 0 0 30px
        padding 70px 85px 70px 100px
        position relative
        +below(1280px)
            margin-left auto
            margin-right auto
        +below(1000px)
            padding 70px 40px 40px
        +below(480px)
            width auto
            padding 70px 20px 40px

    &__main
        display flex
        justify-content space-between
        max-width: 1015px
        +below(750px)
            flex-wrap wrap
            justify-content: center;

    &__left
        margin-right 30px
        margin-bottom 85px
        +below(750px)
            order 2
            margin-right 0
            margin-bottom: 50px
    &__right
        display block
        width 200px
        min-width 200px
        flex-shrink 0
        padding-top 32px
        margin-bottom 50px
        +below(750px)
            padding-top 0

    &__headline
        color #00060c
        font(Bold)
        font-size 26px
        line-height 30px
        margin 0 0 15px
        +below(480px)
            font-size 22px
            line-height 1.2

    &__definition
        color #00060c
        font()
        font-size 20px
        line-height 1.5
        margin 0 0 50px
        em
            color #156500
            font-style: normal;
        +below(480px)
            font-size 18px

    &__info
        display block
        background-color #f5f5f6
        border-left 15px solid #156500
        padding 15px 20px 15px 40px
        color #00060c
        font(Thin)
        font-size 20px
        line-height 1.5
        margin 0
        strong
            font(Bold)
        +below(480px)
            padding 15px 20px
            font-size 18px
            border-left-width: 10px
    &__icon
        retinaSprite($icon_fin_big_square_group)
        margin-bottom: 25px

    &__link
        display block
        color #4cc82c
        font(Bold)
        font-size 20px
        line-height 30px
        text-decoration underline
        text-align center
        transition all 0.3s ease
        &:hover
            color @color
            text-decoration none

    &__offer-title
        color #156500
        font(Bold)
        font-size 32px
        line-height 1
        text-align center
        margin 0 0 10px
        +below(480px)
            font-size 26px

    &__offer-txt
        max-width: 760px;
        color #00060c
        font()
        font-size 26px
        line-height 1.3
        text-align center
        margin 0 auto 45px
        +below(480px)
            font-size 20px
            line-height 1.2

    &__more
        display block
        background-color #f5f5f6
        padding 30px 210px 30px 55px
        position relative
        margin 0 0 70px
        +below(650px)
            padding 30px
        &::before
            content ""
            retinaSprite($icon_small_info_group)
            position absolute
            top -15px
            left 10px
        &::after
            content ""
            retinaSprite($icon_big_up_group)
            position absolute
            top 80px
            right 70px
            +below(650px)
                display none

    &__more-title
        color #156500
        font(Bold)
        font-size 26px
        line-height 28px
        margin 0 0 15px
        +below(480px)
            font-size 22px
            line-height 1.2

    &__more-txt
        color #00060c
        font()
        font-size 20px
        line-height 30px
        margin 0
        +below(480px)
            font-size 18px
            line-height 1.3


    &__call
        color #00060c
        font(Bold)
        font-size 28px
        line-height 39px
        text-align center
        margin 0 auto 30px
        +below(480px)
            font-size 24px
            line-height 1.3

    &__button
        button(green)
        margin 0 auto
