.page
    color #333
    font()
    font-size 16px
    line-height 1
    background-color #fff
    min-width 320px
    height 100%
    position relative
    overflow-x hidden
    overflow-y scroll
    -webkit-font-smoothing subpixel-antialiased !important
    -webkit-backface-visibility hidden
       -moz-backface-visibility hidden
        -ms-backface-visibility hidden

    &:after
        display table
        clear both
        content ""

    &__menu
        position fixed
        left -305px
        top 20px
        z-index 1000
        opacity 0

    &__mobile-menu-trigger
        position fixed
        top 20px
        left -50px
        z-index 1000
        opacity 0
