.s-thanks
    background-color: #fff
    &__in
        container(1200px)
        padding 70px 20px 30px

    &__title
        color #00060c
        font(Bold)
        font-size 40px
        line-height 1
        text-align center
        margin 0 0 70px
        +below(480px)
            font-size 30px

.thanks
    text-align center
    margin-left 20px
    margin-right 20px
    &__item
        display inline-block
        text-align center
        padding-top 10px

    &__img
        display inline-block
        margin auto
        position relative
        transition all .4s ease

    &__label
        display: inline-block;
        color #00060c
        font()
        font-size 16px
        line-height 1
        text-decoration underline
    &__link
        display inline-block
        &::before
            content ""
            retinaSprite($icon_zoom_group)
            position absolute
            top 90px
            left 75px
            // left 50%
            // margin-left 40px
            z-index 100
            opacity 0
            transition opacity 2.0s ease
        &:hover
            text-decoration none
            position relative
            &::before
                opacity 1

            .thanks__img
                transform translateY(-10px)
    &__arrow
        width 29px
        height 50px
        cursor pointer
        opacity .1
        transition opacity .3s ease
        position absolute
        top 300px
        &:hover
            opacity 1
        +below(370px)
            display none


        &--prev
            retinaSprite($icon_slider_thanks_prev_group)
            left -50px
            +below(1400px)
                left 20px

        &--next
            retinaSprite($icon_slider_thanks_next_group)
            right -50px
            +below(1400px)
                right 20px
